---
import estrenaTuAutoImage from "assets/projects/estrenatuauto.png";
import parkeoImage from "assets/projects/parkeo.png";
import landingImage from "assets/projects/landing.png";
import CardProject from "@components/card-project.astro";
---

<section id="projects" aria-labelledby="projects-title" class="py-10 sm:pt-32">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-6xl font-extrabold text-slate-900 text-center mb-28 relative z-20"
      >
        Proyectos
        <span
          class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-base font-medium text-green-700 ring-1 ring-inset ring-green-600/20 relative -top-8"
        >
          TOP
        </span>

        <span class="relative whitespace-nowrap text-blue-600">
          <svg
            aria-hidden="true"
            viewBox="0 0 418 42"
            class="absolute left-0 top-2/3 h-[0.58em] w-full fill-blue-300/70"
            preserveAspectRatio="none"
          >
            <path
              d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z"
            ></path>
          </svg>
          <span class="relative" data-scroll>Desarrollados</span></span
        >
      </h2>
    </div>
  </div>
</section>

<section id="examplePages">
  <div class="container mx-auto">
    <div
      class="grid grid-cols-1 items-start gap-y-16 gap-x-8 md:grid-cols-2 lg:grid-cols-3"
    >
      <CardProject
        imgUrl={parkeoImage}
        title="parkeo mx"
        description=`Designed to introduce the website's purpose and encourage the user to take
        an action.`
        link="https://www.parkeo.mx"
      />
      <CardProject
        imgUrl={estrenaTuAutoImage}
        title="Estrena tu auto"
        description=`Designed to introduce the website's purpose and encourage the user to take
        an action.`
        link="https://estrenatuauto.com/"
      />
      <CardProject
        imgUrl={landingImage}
        title="Landing de rervaciones por evento - Parkeo"
        description=`Designed to introduce the website's purpose and encourage the user to take
        an action.`
        link="https://www.parkeo.mx/auditorio-nacional"
      />
    </div>
  </div>
</section>
