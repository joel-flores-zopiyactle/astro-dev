---
import { Icon } from "astro-icon/components";
---

<section class="mt-10">
  <h2 class="text-sm font-bold leading-7 text-slate-500 text-left mb-5">
    Nuestras tecnolog√≠as de trabajo
  </h2>

  <div class="w-full max-w-5xl mx-auto px-4 md:px-6">
    <!-- Logo Carousel animation -->
    <div
      x-data="{}"
      x-init="$nextTick(() => {let ul = $refs.logos; ul.insertAdjacentHTML('afterend', ul.outerHTML); ul.nextSibling.setAttribute('aria-hidden','true');})"
      class="w-full inline-flex flex-nowrap overflow-hidden
    [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]"
    >
      <ul
        x-ref="logos"
        class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
      >
        <Icon class="h-14 w-32" name="vscode-icons:file-type-js" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-html" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-css" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-astro" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-angular" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-nestjs" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-node" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-reactjs" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-mysql" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-mongo" />
        <Icon class="h-14 w-32" name="vscode-icons:file-type-aws" />
        <Icon class="h-14 w-32" name="devicon:figma" />
        <Icon class="h-14 w-32" name="devicon:postgresql" />
        <Icon class="h-14 w-32" name="devicon:git" />
      </ul>
    </div>
  </div>
</section>

<script>
  document
    .querySelectorAll("[data-confetti-button]")
    .addEventListener("load", () => {});
</script>
